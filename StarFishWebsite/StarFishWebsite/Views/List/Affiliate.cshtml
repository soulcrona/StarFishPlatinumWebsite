@model IEnumerable<StarFishWebsite.Models.AffiliateLink>

@{
    ViewBag.Title = "Affiliate";
}

<h2>Affiliates</h2>

@Html.ActionLink("Add Affiliate", "NewAffiliate", "Upload", "", new { @class = "btn btn-primary" })

<div>
    <table>
        <tr>
            <th>Name:</th>
            <th>Site:</th>
            <th>Description:</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            if (item.Available == true)
            {
                <tr>
                    <td>@item.name</td>
                    <td>@item.SiteName</td>
                    <td>@item.Description</td>
                    <td>
                        @Html.ActionLink("Edit", "Affiliate", "Edit", new { item.ID }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Delete", "SoftDeleteAffiliate", "Edit", new { item.ID }, new { @class = "btn btn-default" })
                    </td>
                </tr>
            }
        }
    </table>
</div>
