@model IEnumerable<StarFishWebsite.Models.FoodType>

@{
    ViewBag.Title = "FoodType";
}

<h2>Food Type</h2>

@Html.ActionLink("Add Food Type", "NewFoodType", "Upload", "", new { @class = "btn btn-primary" })


<div>
    <table>
        <tr>
            <th>Name:</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            if (item.Available == true)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "FoodType", "Edit", new { item.ID }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Delete", "SoftDeleteFoodType", "Edit", new { item.ID }, new { @class = "btn btn-default" })
                    </td>
                </tr>
            }
        }
    </table>
</div>
