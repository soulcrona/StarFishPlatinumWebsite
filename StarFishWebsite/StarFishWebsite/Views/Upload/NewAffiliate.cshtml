@model StarFishWebsite.Models.AffiliateLink

@{
    ViewBag.Title = "NewAffiliate";
}

<h2>NewAffiliate</h2>


@using (Html.BeginForm("AddAffiliate", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(u => u.name)
        @Html.TextBoxFor(u => u.name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.SiteName)
        @Html.TextBoxFor(u => u.SiteName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Description)
        @Html.TextBoxFor(u => u.Description, new { @class = "form-control" })
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Create</button>
}