@model StarFishWebsite.Models.Food

@{
    ViewBag.Title = "NewFood";
}

<div class="card bg-light mb-3">
    <div class="card-header">
        <h2>New Food</h2>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("AddFood", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <table>
            <tr>
                <td>
                    <label>Name:</label>
                </td>
                <td>
                    @Html.TextBoxFor(u => u.Name, new { @class = "form-control" })
                </td>
            </tr>
            <tr>
                <td><label>Food Type:</label></td>
                <td>
                    @Html.DropDownList("selectedfoodtype", (SelectList)ViewBag.FoodTypes, "Select a food type")
                </td>
            </tr>
            <tr>
                    <td>
                        <label>Price: </label>
                    </td>
                    <td>
                        @Html.TextBoxFor(u => u.price, new { @type = "number", step = "0.01" })
                    </td>
            </tr>
            <tr>
                <td>
                    <label>In Game:</label>
                </td>
                <td>
                    @Html.CheckBoxFor(u => u.InGame)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="file" name="filetobeuploaded" />
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <button type="submit" class="btn btn-primary">Add</button>
                </td>
            </tr>
        </table>
        }
        </div>
    </div>
